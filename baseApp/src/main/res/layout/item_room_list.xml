<?xml version="1.0" encoding="utf-8"?>
<com.qiniudemo.baseapp.widget.SquareCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/black"
    android:layout_margin="3dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    android:id="@+id/flItemContent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivRoomItemBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_000000_99000000"
            />

        <TextView
            android:id="@+id/tvRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFFFFFF"

            android:layout_gravity="bottom|start"
            tools:text="aaaa"
            android:layout_margin="6dp"
            />


        <TextView
            android:id="@+id/tvRoomMemb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFFFFFF"
            android:layout_margin="6dp"
            android:drawableStart="@drawable/am_icon_room_member"
            android:layout_gravity="bottom|end"
            tools:text="aaa"
            android:gravity="center"
            android:drawablePadding="6dp"
            />
    </FrameLayout>


</com.qiniudemo.baseapp.widget.SquareCardView>