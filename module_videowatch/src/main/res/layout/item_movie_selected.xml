<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    tools:background="@color/black">
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="90dp"
        app:cardCornerRadius="12dp"

        app:cardElevation="0dp"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/ivMovieCover"
                android:layout_width="150dp"
                android:scaleType="centerCrop"
                android:layout_height="90dp"/>
            <TextView
               android:id="@+id/tvPlaying"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/shape_9909080e_16"
                android:text="正在播放"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawableStart="@mipmap/mv_ic_playing"
                />
            <TextView
                android:id="@+id/tvMovieDuration"
                android:textColor="@color/white"
                android:textSize="11sp"
                tools:text="aa"
                android:layout_gravity="end|bottom"
                android:layout_margin="8dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>

    </androidx.cardview.widget.CardView>
     <TextView
         android:id="@+id/tvMovieName"
         android:layout_width="wrap_content"
         android:paddingEnd="50dp"
         android:layout_height="wrap_content"
         android:textSize="18sp"
         android:textColor="@color/white"
         tools:text="aaaaaaa"
         android:layout_gravity="center_vertical"
         android:layout_marginStart="12dp"
         />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
    <ImageView
        android:id="@+id/ivPlaying"
        android:layout_width="wrap_content"
        android:src="@mipmap/mv_ic_selected"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"/>
</LinearLayout>