<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateInterViewActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#007AFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="18dp">


        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/icon_return_xxhdpi"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="取消"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/tvTittle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="创建面试"
            android:textColor="#FFFFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tvFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:layout_gravity="end|center_vertical"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

    </FrameLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="面试标题"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    />

                <EditText
                    android:id="@+id/etTittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入面试标题"
                    android:textColorHint="#55000000"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="103dp"
                    android:background="@null"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#55EAEAEA"
                    android:layout_gravity="bottom"
                    />
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="刘某某的面试"
                    android:textColorHint="#55000000"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="103dp"
                    android:background="@null"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#55EAEAEA"
                    android:layout_gravity="bottom"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="刘某某的面试"
                    android:textColorHint="#55000000"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="103dp"
                    android:background="@null"
                    />

            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="#55EAEAEA"
                android:layout_gravity="bottom"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司/部门"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    />

                <EditText
                    android:id="@+id/etGovernment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入公司/部门"
                    android:textColorHint="#55000000"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="103dp"
                    android:background="@null"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#55EAEAEA"
                    android:layout_gravity="bottom"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职位"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    />

                <EditText
                    android:id="@+id/etCareer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入职位"
                    android:textColorHint="#55000000"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="103dp"
                    android:background="@null"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#55EAEAEA"
                    android:layout_gravity="bottom"
                    />
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    />

                <EditText
                    android:id="@+id/etInterviewerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入面试者姓名"
                    android:textColorHint="#55000000"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="103dp"
                    android:background="@null"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#55EAEAEA"
                    android:layout_gravity="bottom"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    />

<!--                <TextView-->
<!--                    android:id="@+id/tvInterviewerPhone"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    tools:text="刘某某的面试"-->
<!--                    android:textColorHint="#55000000"-->
<!--                    android:textColor="#FF323240"-->
<!--                    android:textSize="16sp"-->
<!--                    android:layout_gravity="center_vertical"-->
<!--                    android:layout_marginStart="103dp"-->
<!--                    android:background="@null"-->
<!--                    />-->
                <EditText
                    android:id="@+id/etInterviewerPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入面试者手机号"
                    android:textColorHint="#55000000"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:maxLength="15"
                    android:inputType="phone"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="103dp"
                    android:background="@null"
                    />





            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#55EAEAEA"
                android:layout_gravity="bottom"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入会密码"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    />


                <Switch
                    android:id="@+id/swPasswd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/interview_pswd_switch_custom_thumb"
                    android:track="@drawable/interview_pwd_switch_custom_track"
                    android:layout_gravity="center_vertical|end"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#55EAEAEA"
                    android:layout_gravity="bottom"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    />

                <EditText
                    android:id="@+id/tvInterviewerPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="刘某某的面试"
                    android:textColorHint="#55000000"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="103dp"
                    android:background="@null"
                    android:focusable="false"
                    />



                <CheckBox
                    android:id="@+id/cbIsPwdVisbility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@drawable/interview_selector_eye"
                    android:layout_gravity="center_vertical|end"
                    android:checked="true"
                    />


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否开启面试录制"
                    android:textColor="#FF323240"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    />


                <Switch
                    android:id="@+id/swRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/interview_pswd_switch_custom_thumb"
                    android:track="@drawable/interview_pwd_switch_custom_track"
                    android:layout_gravity="center_vertical|end"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#55EAEAEA"
                    android:layout_gravity="bottom"
                    />

            </FrameLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>